{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["esnext", "dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Type definitions
    "types": ["bun", "@babel/parser", "@babel/traverse", "lodash"],

    // Module resolution
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "*": ["*"],
      "@comfytavern/types": ["packages/types/src/index.ts"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "z参考/*",
    "z参考/**/*",
    "**/node_modules",
    "**/dist",
    "apps/*/node_modules",
    "apps/*/dist",
    "packages/*/node_modules",
    "packages/*/dist",
    "z参考/comfy分支litegraph.js/vite.config.mts",
    "z参考/ComfyUI_frontend/vitest.config.ts"
  ]
}
