{
  "name": "comfytavern",
  "version": "0.0.8",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare:project": "bun run ./scripts/ensureProjectReady.ts",
    "dev": "bun run prepare:project ; bun run server.ts dev",
    "dev:backend": "bun run --cwd apps/backend dev",
    "type-check:frontend": "bun run --cwd apps/frontend-vueflow type-check",
    "build-only:frontend": "bun run --cwd apps/frontend-vueflow build-only",
    "build:frontend": "bun run type-check:frontend ; bun run build-only:frontend",
    "build": "bun run build:frontend",
    "preview:frontend": "bun run --cwd apps/frontend-vueflow preview",
    "start": "bun run prepare:project ; bun run server.ts",
    "start:backend": "bun run --cwd apps/backend start",
    "start:frontend:prod": "bun run --cwd apps/frontend-vueflow start:prod",
    "manage:pm2": "bun ./scripts/pm2-manager.ts",
    "db:generate": "bun run ./node_modules/drizzle-kit/bin.cjs generate --config ./drizzle.config.ts",
    "db:migrate": "bun run ./node_modules/drizzle-kit/bin.cjs migrate --config ./drizzle.config.ts",
    "db:upgrade": "bun scripts/upgradeDatabase.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-orm": "^0.44.2",
    "esbuild": "0.25.1",
    "estree-walker": "2.0.2",
    "npm-run-all2": "^7.0.2",
    "typescript": "~5.8.0",
    "vite": "^6.2.1",
    "vitest": "^3.0.8",
    "vue-tsc": "^2.2.8"
  },
  "overrides": {
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.3",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@libsql/client": "^0.15.9",
    "@rigstech/codemirror-vscodesearch": "^1.0.4",
    "@types/lodash": "^4.17.16",
    "codemirror": "^6.0.1",
    "drizzle-kit": "^0.31.1",
    "lodash": "^4.17.21",
    "sanitize-filename": "^1.6.3",
    "vue-codemirror": "^6.1.1",
    "vuedraggable": "^4.1.0",
    "zod": "^3.24.2"
  }
}
